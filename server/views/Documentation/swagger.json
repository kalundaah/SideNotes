{
  "openapi": "3.0.0",
  "info": {
    "title": "Sidenotes Swagger",
    "description": "Swagger Documentation",
    "version": "3.0.0"
  },
  "paths": {
    "/": {
      "get": {
        "summary": "Get the Home page",
        "responses": {
          "200": {
            "description": "Home Page",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Home page"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/note/view_notes": {
      "get": {
        "summary": "Get all notes",
        "responses": {
          "200": {
            "description": "All notes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "Notes": {
                      "type": "string",
                      "example": "The note 'The big day' with 'This is a great way to live.' has been created"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/note/view_note/{id_nos}": {
      "post": {
        "summary": "View a specific note by ID",
        "parameters": [
          {
            "name": "id_nos",
            "in": "path",
            "required": true,
            "description": "The ID of the note to view",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A specific note",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "example": "123"
                    },
                    "title": {
                      "type": "string",
                      "example": "My Note Title"
                    },
                    "content": {
                      "type": "string",
                      "example": "This is the content of the note."
                    },
                    "created_at": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2024-08-07T12:34:56Z"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Note not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Note not found"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/note/create": {
      "post": {
        "summary": "Create a new note",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "example": "The big day"
                  },
                  "content": {
                    "type": "string",
                    "example": "This is a great way to live."
                  }
                },
                "required": [
                  "title"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Note successfully created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "The note 'The big day' with 'This is a great way to live.' has been created"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/note/get_note": {},
    "/note/update_note": {},
    "/note/delete_note": {},
    "/task/create_task": {
      "post": {
        "summary": "Create a new task",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "example": "Remember to do work"
                  },
                  "content": {
                    "type": "string",
                    "example": "The work I was to do is ABC"
                  }
                },
                "required": [
                  "title"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Task successfully created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "The task 'Remember to do work' has been created"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/task/get_task": {},
    "/task/update_task": {},
    "/task/delete_task": {}
  }
}